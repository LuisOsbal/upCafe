.Header
	width 100%
	position relative
	border-top 5px solid upCafe
	box-shadow 0 4px 9px 0 rgba(50, 50, 50, 0.3)
	display block
	&-container
		margin .2em .5em
		position relative
	&-figure
		margin 0
		padding 0
		display inline-block
	&-logo
		width 55px
	&-contact
		display none
	&-ButtonContainer
		display inline-block
		float right
		margin .5em 0
	&-mobileButton
		background-color transparent
		border 0
		border-bottom .30em solid upCafe
		border-top .30em solid upCafe
		cursor pointer
		font-size 1em
		height 1.5em
		margin 1em
		outline 0
		position relative
		width 2.5em
		line-height 3.5em
		float right
		&::after,
		&::before
			border-bottom .25em solid upCafe
			bottom .375em
			content ''
			height 0
			left 0
			position absolute
			right 0
.isActive
	border-color transparent
	&::after,
	&::before
		transition transform 200ms ease-out
	&::after
		transform rotateZ(45deg)
	&::before
		transform rotateZ(-45deg)

@media screen and (min-width 768px)
	.Header
		&-contact
			display inline-block
			position absolute
			top 0em
			right 1em
		&-logo
			margin-left 1em
		&-span
			color upCafe
			margin 0 .2em
			text-decoration none
			font-family 'Titillium Web', sans-serif
			font-weight 600
		&-email
			margin-left 2em
		&-ButtonContainer
			display none
